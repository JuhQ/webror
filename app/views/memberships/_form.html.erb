
<% if current_user %>
  <% unless @beerclubs.empty? %>
    <%= form_with(model: membership, local: true) do |form| %>
      <% if membership.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

          <ul>
          <% membership.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        Beerclub:
        <%= form.select :beerclub_id, options_from_collection_for_select(@beerclubs, :id, :name) %>
      </div>

      <%= form.hidden_field(:user_id, value: current_user.id) %>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  <% end %>
<% end %>
