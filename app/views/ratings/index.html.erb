<h2>List of ratings</h2>

<% cache 'ratings', expires_in:10.minutes do %>
  <p> Number of ratings: <%= @ratings.count %> </p>

  <h2>top</h2>
  <ul>
    <% @top.each do |rating| %>
      <li><%= link_to rating.name, rating %></li>
    <% end %>
  </ul>

  <h2>recent</h2>
  <ul>
    <% @recent.each do |rating| %>
      <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
    <% end %>
  </ul>

  <h2>all</h2>
  <ul>
    <% @ratings.each do |rating| %>
      <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
    <% end %>
  </ul>
<% end %>

<% if current_user %>
  <%= link_to 'Create new rating', new_rating_path %>
<% end %>
