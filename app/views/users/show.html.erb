<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <% if !@user.ratings.empty? %>
  Has made <%= pluralize(@user.ratings.count, 'rating', 'ratings') %>, average rating <%= @user.average_rating %>
  <% end %>
</p>

<h2>Ratings</h2>
<ul>
  <% @user.ratings.each do |rating| %>
    <li> <%= rating %> <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
  <% end %>
</ul>

<h2>Beerclub memberships</h2>
<ul>
  <% @user.beerclubs.each do |beerclub| %>
    <li><%= link_to beerclub.name, beerclub %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
